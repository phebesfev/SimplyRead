{
    "manifest_version": 3,
    "name": "SimplyRead",
    "version": "1.0",
    "description": "Replaces complex words with simpler ones when double-clicked.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["*://*/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }